<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    android:columnCount="2"
    android:orientation="horizontal"
    android:rowCount="2">


    <LinearLayout
        android:id="@+id/menu_xinzen"
        android:layout_width="@dimen/controlBtnWidth"
        android:layout_height="@dimen/controlBtnHeight"
        android:background="@mipmap/menu_bg_blue"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:onClick="onClick"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/menu_xinzen_img"
            android:layout_width="@dimen/controlBtnImgWidth"
            android:layout_height="@dimen/controlBtnImgHeight"
            android:layout_marginTop="15dp"
            android:src="@mipmap/dingweizhuangtai_weixuanzhon"
            android:layout_gravity="center_horizontal">
        </ImageView>
        <TextView
            android:id="@+id/menu_xinzen_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/fontcolor_dep1"
            android:textSize="@dimen/controlBtnFontSize"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:text="新增">
        </TextView>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/menu_shanchuxuanzhong"
        android:layout_width="@dimen/controlBtnWidth"
        android:layout_height="@dimen/controlBtnHeight"
        android:background="@mipmap/menu_bg_blue"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:onClick="onClick"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/menu_shanchuxuanzhong_img"
            android:layout_width="@dimen/controlBtnImgWidth"
            android:layout_height="@dimen/controlBtnImgHeight"
            android:layout_marginTop="15dp"
            android:src="@mipmap/dingweizhuangtai_weixuanzhon"
            android:layout_gravity="center_horizontal">
        </ImageView>
        <TextView
            android:id="@+id/menu_shanchuxuanzhong_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/fontcolor_dep1"
            android:textSize="@dimen/controlBtnFontSize"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:text="删除选中">
        </TextView>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/menu_bianjixuanzhong"
        android:layout_width="@dimen/controlBtnWidth"
        android:layout_height="@dimen/controlBtnHeight"
        android:background="@mipmap/menu_bg_blue"
        android:onClick="onClick"
        android:layout_below="@+id/menu_xinzen"
        android:layout_alignLeft="@+id/menu_xinzen"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/menu_bianjixuanzhong_img"
            android:layout_width="@dimen/controlBtnImgWidth"
            android:layout_height="@dimen/controlBtnImgHeight"
            android:layout_marginTop="15dp"
            android:src="@mipmap/dingweizhuangtai_weixuanzhon"
            android:layout_gravity="center_horizontal">
        </ImageView>
        <TextView
            android:id="@+id/menu_bianjixuanzhong_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/fontcolor_dep1"
            android:textSize="@dimen/controlBtnFontSize"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:text="编辑选中">
        </TextView>
    </LinearLayout>



</RelativeLayout>

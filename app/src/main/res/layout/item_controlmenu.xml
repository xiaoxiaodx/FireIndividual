<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/controlBtnWidth"
    android:layout_height="@dimen/controlBtnHeight"
    android:layout_margin="15dp"
    android:focusable="true"
    android:id="@+id/linearlayout"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageview"
        android:layout_width="@dimen/controlBtnImgWidth"
        android:layout_height="@dimen/controlBtnImgHeight"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal">
    </ImageView>
    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/fontcolor_dep1"
        android:textSize="@dimen/controlBtnFontSize"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:text="楼层设置">
    </TextView>

</LinearLayout>

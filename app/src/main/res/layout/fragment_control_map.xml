    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    android:columnCount="2"
    android:orientation="horizontal"
    android:rowCount="2">


    <LinearLayout
        android:id="@+id/menu_quanjugailan"
        android:layout_width="@dimen/controlBtnWidth"
        android:layout_height="@dimen/controlBtnHeight"
        android:background="@color/itembg"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:onClick="onClick"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/menu_quanjugailan_img"
            android:layout_width="@dimen/controlBtnImgWidth"
            android:layout_height="@dimen/controlBtnImgHeight"
            android:layout_marginTop="15dp"
            android:src="@mipmap/quanjudingwei_quanjugailan"
            android:layout_gravity="center_horizontal">
        </ImageView>
        <TextView
            android:id="@+id/menu_quanjugailan_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/fontcolor_dep1"
            android:textSize="@dimen/controlBtnFontSize"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:text="全局概览">
        </TextView>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/menu_duiyuanxianshi"
        android:layout_width="@dimen/controlBtnWidth"
        android:layout_height="@dimen/controlBtnHeight"
        android:background="@color/itembg"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/menu_duiyuanxianshi_img"
            android:layout_width="@dimen/controlBtnImgWidth"
            android:layout_height="@dimen/controlBtnImgHeight"
            android:layout_marginTop="15dp"
            android:src="@mipmap/quanjudingwei_duiyuanxianshi"
            android:layout_gravity="center_horizontal">
        </ImageView>
        <TextView
            android:id="@+id/menu_duiyuanxianshi_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/fontcolor_dep1"
            android:textSize="@dimen/controlBtnFontSize"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:text="队员显示">
        </TextView>

    </LinearLayout>




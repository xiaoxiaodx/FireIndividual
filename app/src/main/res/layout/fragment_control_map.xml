    <LinearLayout
        android:id="@+id/menu_lishihuifang"
        android:layout_width="@dimen/controlBtnWidth"
        android:layout_height="@dimen/controlBtnHeight"
        android:background="@color/itembg"
        android:layout_alignLeft="@+id/menu_quanjugailan"
        android:layout_below="@+id/menu_quanjugailan"
        android:layout_marginRight="20dp"

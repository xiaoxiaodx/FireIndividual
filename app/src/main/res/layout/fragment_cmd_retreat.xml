<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="500dp"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@mipmap/shebeiguanli_beijing">

        <TextView
            android:id="@+id/cheli_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:gravity="center_horizontal"
            android:text="下发撤离"
            android:textColor="@color/fontcolor_dep2"
            android:textSize="@dimen/fontsize_3">

        </TextView>

        <GridView
            android:id="@+id/firemen_retreat_gridview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="100dp"
            android:numColumns="5"
            android:cacheColorHint="#00000000"
            android:stretchMode="columnWidth"
            android:horizontalSpacing="10dp"
            android:verticalSpacing="10dp"></GridView>


        <Button
            android:id="@+id/firemen_retreat_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ensure"
            android:textColor="@android:color/white"
            android:textSize="@dimen/fontsize_4"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_alignRight="@+id/firemen_retreat_gridview"
            android:text="发送">
        </Button>
    </RelativeLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    android:columnCount="2"
    android:orientation="horizontal"
    android:rowCount="2">


    <LinearLayout
        android:id="@+id/menu_loucengshezhi"
        android:layout_width="@dimen/controlBtnWidth"
        android:layout_height="@dimen/controlBtnHeight"
        android:background="@mipmap/menu_bg_blue"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:onClick="onClick"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/menu_loucengshezhi_img"
            android:layout_width="@dimen/controlBtnImgWidth"
            android:layout_height="@dimen/controlBtnImgHeight"
            android:layout_marginTop="15dp"
            android:src="@mipmap/dingweizhuangtai_weixuanzhon"
            android:layout_gravity="center_horizontal">
        </ImageView>
        <TextView
            android:id="@+id/menu_loucengshezhi_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/fontcolor_dep1"
            android:textSize="@dimen/controlBtnFontSize"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:text="楼层设置">
        </TextView>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/menu_wangluoshezhi"
        android:layout_width="@dimen/controlBtnWidth"
        android:layout_height="@dimen/controlBtnHeight"
        android:background="@mipmap/menu_bg_blue"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:onClick="onClick"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/menu_wangluoshezhi_img"
            android:layout_width="@dimen/controlBtnImgWidth"
            android:layout_height="@dimen/controlBtnImgHeight"
            android:layout_marginTop="15dp"
            android:src="@mipmap/dingweizhuangtai_weixuanzhon"
            android:layout_gravity="center_horizontal">
        </ImageView>
        <TextView
            android:id="@+id/menu_wangluoshezhi_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/fontcolor_dep1"
            android:textSize="@dimen/controlBtnFontSize"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:text="网络设置">
        </TextView>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/menu_tongxinsehzhi"
        android:layout_width="@dimen/controlBtnWidth"
        android:layout_height="@dimen/controlBtnHeight"
        android:background="@mipmap/menu_bg_blue"
        android:onClick="onClick"
        android:layout_below="@+id/menu_loucengshezhi"
        android:layout_alignLeft="@+id/menu_loucengshezhi"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/menu_tongxinsehzhi_img"
            android:layout_width="@dimen/controlBtnImgWidth"
            android:layout_height="@dimen/controlBtnImgHeight"
            android:layout_marginTop="15dp"
            android:src="@mipmap/dingweizhuangtai_weixuanzhon"
            android:layout_gravity="center_horizontal">
        </ImageView>
        <TextView
            android:id="@+id/menu_tongxinsehzhi_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/fontcolor_dep1"
            android:textSize="@dimen/controlBtnFontSize"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:text="通信设置">
        </TextView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/menu_lixianditu"
        android:layout_width="@dimen/controlBtnWidth"
        android:layout_height="@dimen/controlBtnHeight"
        android:background="@mipmap/menu_bg_blue"
        android:layout_alignLeft="@+id/menu_wangluoshezhi"
        android:layout_below="@+id/menu_wangluoshezhi"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:onClick="onClick"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/menu_lixianditu_img"
            android:layout_width="@dimen/controlBtnImgWidth"
            android:layout_height="@dimen/controlBtnImgHeight"
            android:layout_marginTop="15dp"
            android:src="@mipmap/dingweizhuangtai_weixuanzhon"
            android:layout_gravity="center_horizontal">
        </ImageView>
        <TextView
            android:id="@+id/menu_lixianditu_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/fontcolor_dep1"
            android:textSize="@dimen/controlBtnFontSize"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:text="离线地图">
        </TextView>

    </LinearLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:onClick="masterMenuClick"
    >

    <LinearLayout
        android:id="@+id/layout_mastermenu"
        android:layout_width="@dimen/mastermenuWidth"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="10dp"
        android:background="@mipmap/mastermenu"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/menu_image"
            android:layout_width="@dimen/mastermenuImgW"
            android:layout_height="@dimen/mastermenuImgH"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical">
        </ImageView>

        <TextView
            android:id="@+id/menu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:textSize="@dimen/mastermenuFontSize"
            android:text="name"

            android:layout_gravity="center_vertical">
        </TextView>

    </LinearLayout>

</LinearLayout>